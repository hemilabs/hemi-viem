{
  "extends": ["bloq", "prettier"],
  "ignorePatterns": ["_esm/*", "_types/*"],
  "overrides": [
    {
      "extends": ["bloq/typescript", "prettier"],
      "files": ["src/**/*.ts"],
      "rules": {
        "camelcase": [
          "off",
          {
            "allow": ["btc_", "l2_"]
          }
        ]
      }
    },
    {
      "extends": ["bloq/markdown"],
      "files": ["*.md"]
    }
  ],
  "parserOptions": {
    "sourceType": "module"
  },
  "root": true
}
